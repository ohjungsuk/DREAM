<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/menu_imgbtn_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/backarrow"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="더보기"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/menu_btn_modify_myinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:background="@color/white"
                android:stateListAnimator="@null"
                android:text="수정하기"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/menu_btn_modify_mypw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:stateListAnimator="@null"
                android:text="PW 변경"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:id="@+id/pin_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="내 아이디  :  "
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>
        <TextView
            android:layout_toEndOf="@id/pin_myid"
            android:id="@+id/menu_txt_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dtps"
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>

        <TextView
            android:id="@+id/pin_mynickname"
            android:layout_below="@id/pin_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="닉네임  :  "
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>
        <TextView
            android:id="@+id/menu_txt_mynickname"
            android:layout_toEndOf="@id/pin_mynickname"
            android:layout_below="@id/pin_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="jungsuk"
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>

        <TextView
            android:id="@+id/pin_mybloodtype"
            android:layout_below="@id/pin_mynickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="내 혈액형  :  "
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>
        <TextView
            android:id="@+id/menu_txt_mybloodtype"
            android:layout_toEndOf="@+id/pin_mybloodtype"
            android:layout_below="@id/pin_mynickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="B+"
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>

        <TextView
            android:id="@+id/pin_myarea"
            android:layout_below="@id/pin_mybloodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="관심지역  :  "
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>
        <TextView
            android:id="@+id/menu_txt_myarea"
            android:layout_toEndOf="@id/pin_myarea"
            android:layout_below="@id/pin_mybloodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="경기도 "
            android:textSize="16sp"
            android:textColor="@color/colorgray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푸쉬알림 수신"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/menu_checkbox_push_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지정헌혈 요청 알림 수신"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/menu_checkbox_requestlist_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스이용약관"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 처리방침"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>